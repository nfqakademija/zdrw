{% extends "ZdrwOffersBundle::layout.html.twig" %}

{% block content %}
    <div class="container">
        <section class="col-md-2 box profile-section">
            <article class="profile-content">
                <div class="avatar"></div>
                <br>
                <p>
                    <b>{{ name }}</b><br>
                    {{ email }}
                </p>
                <hr>
                Meniu
                <br><br>
            </article>
        </section>
        <section class="col-md-6 box primary-section">
            <div class="primary-content">
                <h1>Offers</h1>
                <hr>
                <p>
                    {% for offer in offers %}
                        <h3>{{ offer.title }}<small class="pull-right">Views: {{ offer.views }}</small></h3>
                        <p>{{ offer.description }}</p>
                        <br><small class="pull-right">{{ offer.startDate | date("Y-d-m H:i:s") }}</small>
                        <hr>
                    {% endfor %}
                </p>
            </div>
        </section>
        <section class="col-md-4 box secondary-section">
            <div class="secondary-content">
                <h1>Dares</h1>
                <p>
                    Lorem ipsum
                </p>
            </div>
        </section>
    </div>
{% endblock %}