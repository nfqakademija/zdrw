{% extends "ZdrwOffersBundle::layout.html.twig" %}

{% block content %}
    <div class="container page-content">
        <section class="col-md-8 box primary-section">
            <div class="primary-content">
                <h1>Dares</h1>
                <hr>
                <p>
                    {% for dare in dares %}
                        <h3>{{ dare.title }}<small class="pull-right">Views: {{ dare.views }}</small></h3>
                        <p>{{ dare.description }}</p>
                        <br><small class="pull-right">{{ dare.startDate | date("Y-d-m H:i:s") }}</small>
                        <hr>
                    {% endfor %}
                </p>
            </div>
        </section>
        <section class="col-md-4 box secondary-section">
            <div class="secondary-content">
                <h1>Stares</h1>
                <p>
                    Lorem ipsum
                </p>
            </div>
        </section>
    </div>
{% endblock %}