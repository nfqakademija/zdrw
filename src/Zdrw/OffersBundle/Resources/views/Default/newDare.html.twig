{% extends "ZdrwOffersBundle::layout.html.twig" %}

{% block content %}
    <div class="container page-content">
        <section class="col-md-8 box primary-section">
            <h1>New dare</h1>
            <div class="primary-content">
                <div class="row">
                    <article class="articles">
                        <div class="stare-article">
                            {{ form_start(form) }}
                            {{ form_errors(form) }}
                            <div>
                                <span class="control-label">{{ form_label(form.title) }} (<span class="text-info">Maximum 50 symbols</span>):</span>
                                {{ form_errors(form.title) }}
                                {{ form_widget(form.title, {'attr': {'class': 'form-control'}}) }}
                            </div>
                            <br>
                            <div>
                                <span class="control-label">{{ form_label(form.description, 'Short description') }} (<span class="text-info">Maximum 500 symbols</span>):</span>
                                {{ form_errors(form.description) }}
                                {{ form_widget(form.description, {'attr': {'class': 'form-control'}}) }}
                            </div>
                            <br>
                            <div>
                                <span class="control-label">{{ form_label(form.longDesc, 'Long description') }} (<span class="text-info">Maximum 1000 symbols</span>):</span>
                                {{ form_errors(form.longDesc) }}
                                {{ form_widget(form.longDesc, {'attr': {'class': 'form-control'}}) }}
                            </div>
                            <div>
                                <br>
                                {{ form_widget(form.save, {'attr': {'class': 'btn btn-primary pull-right'}}) }}
                                <br>
                                <br>
                                {{ form_end(form) }}
                            </div>
                        </div>
                        <div>
                            <div class="st st5"></div>
                            <div class="st st2"></div>
                            <div class="st st3"></div>
                            <div class="st st4"></div>
                            <div class="st st1"></div>
                        </div>
                    </article>
                </div>
            </div>
        </section>
        <section class="col-md-4 secondary-section">
            <h1>Stares</h1>
            <div class="secondary-content">
                <div class="row">
                    {% for stare in stares %}
                        <article class="col-md-12 articles">
                            <div class="dare-article">
                                <div class="row">
                                    <div class="col-sm-6 col-md-12 col-lg-6 thumb-keeper col-without-padding">
                                        <div class="thumb-container">
                                            <a href="#" class="thumbnail stare-thumbnail">
                                                <img src="../uploads/thumb/{{ stare.id }}.jpg" width="350" height="260" class="img-responsive" alt="" />
                                            </a>
                                        </div>
                                    </div>
                                    <div class="col-sm-6 col-md-12 col-lg-6 col-without-padding">
                                        <h4>
                                            <small class="pull-right">
                                                {{ stare.startDate | date("Y-d-m H:i") }}
                                            </small><br>
                                            <a href="{{ path('zdrw_dare', { id: stare.id }) }}">{{ stare.title|length > 50 ? stare.title|slice(0, 50) ~ '...' : stare.title  }}</a>
                                        </h4>
                                    </div>
                                    <div class="col-md-12 col-sm-6 col-without-padding">
                                        <p class="shortDesc hidden-xs">{{ stare.description|length > 70 ? stare.description|slice(0, 70) ~ '...' : stare.description  }}</p>
                                    </div>
                                </div>
                            </div>
                            <div>
                                <div class="st st1"></div>
                                <div class="st st2"></div>
                                <div class="st st3"></div>
                                <div class="st st4"></div>
                                <div class="st st5"></div>
                            </div>
                        </article>
                    {% endfor %}
                </div>
            </div>
        </section>
    </div>
{% endblock %}