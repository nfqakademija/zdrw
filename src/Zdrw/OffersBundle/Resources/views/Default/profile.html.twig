{% extends "ZdrwOffersBundle::layout.html.twig" %}

{% block content %}
    {% block leftSideBar %}{% endblock %}
    {% set userInfo = user_info_provider.userInfo(user) %}
    <div class="container page-content">
        <section class="col-md-4 profile-section">
            <article class="profile">
                <div class="col-md-6 avatar2"></div>
                <div class="col-md-6">
                <p>
                    <b class="font-1">{{ userInfo.name }}</b><br>
                    {{ userInfo.email }}
                </p>
                </div>
            </article>
        </section>
        <section class="col-md-8 primary-section">
            <div class="primary-content">
                <h2>Notifications</h2>
                <hr>
                <p>
                    {% for n in notifications %}
                        <p>{{ n.notification }}</p>
                        <br><small class="pull-right">{{ n.date | date("Y-d-m H:i:s") }}</small>
                        <hr>
                    {% endfor %}
                </p>
            </div>
        </section>
    </div>
{% endblock %}