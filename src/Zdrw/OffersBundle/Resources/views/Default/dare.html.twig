{% extends "ZdrwOffersBundle::layout.html.twig" %}

{% block content %}
    <div class="container page-content">
        <section class="col-md-8 box primary-section">
            <div class="primary-content">
                <div class="row">
                    <article class="articles">
                        <small class="pull-right">
                            {{ dare.startDate | date("Y-d-m H:i:s") }}
                        </small>
                        <h1>{{ dare.title }}</h1>
                        <div class="col-md-2">
                        <div style="width:80px;height:80px;background-color:#777777;margin-right:10px;"></div>
                            <b><a href="{{ path('zdrw_user', {name: dare.Owner}) }}">{{ dare.Owner }}</a></b>
                        </div>
                        <div class="dare-article col-md-10">
                            <p>{{ dare.description }}</p>
                        </div>
                        <div class="col-md-12">
                            <br>
                        </div>
                        <div class="col-md-12">
                            <p>{{ dare.longDesc }}</p>
                        </div>
                        <div class="col-md-12">
                            {% if (dare.status == 1) and (is_granted("IS_AUTHENTICATED_FULLY")) %}
                                <button type="button" class="btn btn-sm btn-success" data-toggle="modal" data-target="#uploadModal">I did it</button>
                            {% elseif not is_granted("IS_AUTHENTICATED_FULLY") %}
                                <div class="alert alert-info" role="alert">You must be registered user in order to accept the challange!</div>
                            {% endif %}
                        </div>
                        <!-- Modal -->
                        <div class="modal fade" id="uploadModal" tabindex="-1" role="dialog" aria-labelledby="uploadModalLabel" aria-hidden="true">
                            <div class="modal-dialog">
                                <div class="modal-content">
                                    <div class="modal-header">
                                        <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
                                        <h4 class="modal-title" id="myModalLabel">{{ dare.title }}</h4>
                                    </div>
                                    <div class="modal-body">
                                        <form id="upload_form" method="post" enctype="multipart/form-data">
                                            <div id="form">
                                                <label for="form_video" class="required">Video</label>
                                                <input type="file" name="file1" id="file1" required="required" />
                                                <input name="id" type="hidden" value="{{ dare.id }}"/>
                                                <input name="userid" type="hidden" value="{{ user.id }}"/>
                                                <input type="button" id="upload-submit" onclick="uploadFile('{{ path('zdrw_index') }}upload')" class="btn btn-sm btn-success" value="Upload" />
                                                <progress id="progressBar" value="0" max="100" style="width:300px;"></progress> <h3 id="status"></h3> <p id="loaded_n_total"></p>
                                            </div>
                                        </form>
                                    </div>
                                    <div class="modal-footer">
                                        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <br/>
                        <div class="pull-right">
                            Views: {{ dare.views }}
                            <button class="btn btn-success btn-xs">Like</button>
                            <button class="btn btn-primary btn-xs">Share</button>
                            <button class="btn btn-warning btn-xs">Comment</button>
                        </div>
                    </article>
                </div>
            </div>
        </section>
        <section class="col-md-4 box secondary-section">
            <div class="secondary-content">
                <h1>Stares</h1>
                <div class="row">
                {% for stare in stares %}
                    <article class="articles">
                        <div class="dare-article">
                            <div style="float:left;width:100%;height:150px;background-color:#777777;margin-bottom:10px;"></div>
                            <h4>
                                <small class="pull-right">
                                    {{ stare.startDate | date("Y-d-m H:i") }}
                                </small>
                                <br>
                                {{ stare.title }}
                            </h4>
                            <p class="hidden-xs">{{ stare.description }}</p>
                            <a href="{{ path('zdrw_dare', { id: stare.id }) }}" class="read-more">Read more</a>
                            <div class="pull-right">
                                Views: {{ stare.views }}
                                <button class="btn btn-success btn-xs">Like</button>
                                <button class="btn btn-primary btn-xs">Share</button>
                                <button class="btn btn-warning btn-xs">Comment</button>
                            </div>
                            <br><br>
                        </div>
                    </article>
                {% endfor %}
                </div>
            </div>
        </section>
    </div>
{% endblock %}