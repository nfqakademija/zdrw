{% trans_default_domain 'FOSUserBundle' %}

<div class="container page-content">
    <div class="row">
        <section class="col-sm-12"><br><br></section>
        <section class="stare-section col-sm-offset-4 col-sm-4">
            <div class="primary-content articles">
                <div class="stare-article">
                    <form action="{{ path('fos_user_resetting_reset', {'token': token}) }}" {{ form_enctype(form) }} method="POST" class="fos_user_resetting_reset">
                        {{ form_label(form.plainPassword.first) }}
                        {{ form_widget(form.plainPassword.first, { 'attr': {'class': 'form-control'} }) }}
                        <br>

                        {{ form_label(form.plainPassword.second) }}
                        {{ form_widget(form.plainPassword.second, { 'attr': {'class': 'form-control'} }) }}
                        <br>

                        {% if not form.vars.valid %}
                            <span class="help-block alert alert-danger">
                                {{ form_errors(form.plainPassword.first) }}
                                {{ form_errors(form.plainPassword.second) }}
                            </span>
                        {% endif %}

                        {{ form_rest(form) }}

                        <div>
                            <input class="btn btn-primary btn-block" type="submit" value="{{ 'resetting.reset.submit'|trans }}" />
                        </div>
                    </form>
                </div>
            </div>
        </section>
    </div>
</div>
